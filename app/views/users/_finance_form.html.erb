<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <!--<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>-->

      <% @user.errors.full_messages.each do |msg| %>
        <span class="form_error"><%= msg %>!</span>
      <% end %>
    </div>
  <% end %>
  
  <%= f.hidden_field :team, :value => "finance" %>
  
  <div class="field">
    <span class="field_label">Full Name:</span><br/>
    <%= f.text_field :name, :class => "field_input_finance" %>
  </div>
  
  <div class="field">
    <span class="field_label">Email Address:</span><br/>
    <%= f.text_field :email, :class => "field_input_finance" %>
  </div>
  
  <div class="field">
    <span class="field_label">Yale Affiliation and Year of Graduation</span><br/>
    <%= f.text_field :year, :class => "field_input_finance" %>
  </div>
  
  <div class="field_check">
  	<span class="field_label">Which position(s) are you applying for?</span><br/>
  	<%= f.check_box 'exec' %><span class="field_label_check">Executive Director</span><br/>
  	<%= f.check_box 'finance_director' %><span class="field_label_check">Finance Director</span><br/>
  	<%= f.check_box 'fundraising_director' %><span class="field_label_check">Fundraising Director</span><br/>
  </div>
  
  <div class="field_text">
    <span class="field_label">In a few brief sentences, tell us who you are.</span><br/>
    <%= f.text_area :bio, :class => "field_textarea_finance" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">What is your favorite TED talk? Why?</span><br/>
    <%= f.text_area :ted_talk, :class => "field_textarea_finance" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">Who would you like to hear speak at TED?</span><br/>
    <%= f.text_field :speaker, :class => "field_speaker_finance" %>
  </div>
  
  <div class="field_text_events">
  </div>
  
  <div class="field_text">
    <span class="field_label">In your opinion, what fundraising strategy should TEDxYale implement? Why?</span><br/>
    <%= f.text_area :question, :class => "field_textarea_finance" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">What experience have you had to qualify you for a position on the Finance team?</span><br/>
    <%= f.text_area :experience, :class => "field_textarea_finance" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Apply to Join the Team", :class => "finance_submit_button"%>
  </div>
<% end %>