<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <!--<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>-->

      <% @user.errors.full_messages.each do |msg| %>
        <span class="form_error"><%= msg %>!</span>
      <% end %>
    </div>
  <% end %>
  
  <%= f.hidden_field :team, :value => "design" %>
  
  <div class="field">
    <span class="field_label">Full Name:</span><br/>
    <%= f.text_field :name, :class => "field_input_design" %>
  </div>
  
  <div class="field">
    <span class="field_label">Email Address:</span><br/>
    <%= f.text_field :email, :class => "field_input_design" %>
  </div>
  
  <div class="field">
    <span class="field_label">Yale Affiliation and Year of Graduation</span><br/>
    <%= f.text_field :year, :class => "field_input_design" %>
  </div>
  
  <div class="field_check">
  	<span class="field_label">Which position(s) are you applying for?</span><br/>
  	<%= f.check_box 'exec' %><span class="field_label_check">Executive Director</span><br/>
  	<%= f.check_box 'developer' %><span class="field_label_check">Developer</span><br/>
  	<%= f.check_box 'designer' %><span class="field_label_check">Graphic Designer</span><br/>
  </div>
  
  <div class="field_text">
    <span class="field_label">In a few brief sentences, tell us who you are.</span><br/>
    <%= f.text_area :bio, :class => "field_textarea_design" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">What is your favorite TED talk? Why?</span><br/>
    <%= f.text_area :ted_talk, :class => "field_textarea_design" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">Who would you like to hear speak at TED?</span><br/>
    <%= f.text_field :speaker, :class => "field_speaker_design" %>
  </div>
  
  <div class="field_text">
  	<span class="field_label">Please check all you are comfortable using:</span><br/>
  	<div class="checks_float">
		<%= f.check_box 'html' %><span class="field_label_check">HTML</span><br/>
		<%= f.check_box 'css' %><span class="field_label_check">CSS</span><br/>
		<%= f.check_box 'jquery' %><span class="field_label_check">JQuery</span><br/>
		<%= f.check_box 'ror' %><span class="field_label_check">Ruby on Rails</span><br/>
	</div>
	<div class="checks_float">
		<%= f.check_box 'javascript' %><span class="field_label_check">Node.js</span><br/>
		<%= f.check_box 'photoshop' %><span class="field_label_check">Photoshop</span><br/>
		<%= f.check_box 'in_design' %><span class="field_label_check">In Design</span><br/>
		<%= f.check_box 'illustrator' %><span class="field_label_check">Illustrator</span><br/>
	</div>
  </div>
  
  <div class="field_text">
    <span class="field_label">What is your design philosophy? How would you improve this web page?</span><br/>
    <%= f.text_area :question, :class => "field_textarea_design" %>
  </div>
  
  <div class="field_text">
    <span class="field_label">What experience have you had to qualify you for a position on the Design & Branding team? Include links to past work.</span><br/>
    <%= f.text_area :experience, :class => "field_textarea_design" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Apply to Join the Team", :class => "design_submit_button"%>
  </div>
<% end %>